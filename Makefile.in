#=============================================================================
# variables
#=============================================================================
prefix				 := @prefix@
abs_top_srcdir := @abs_top_srcdir@
XLEN           := @XLEN@
RISCVTOOLS     := @RISCVTOOLS@
ROCC 					  = examples

vars 					  = abs_top_srcdir=$(abs_top_srcdir)	\
	 								XLEN=$(XLEN) 											\
	 								PREFIX=$(ROCC)-$@ 								\
	 								src_dir=$(abs_top_srcdir)/$@ 			\
	 								RISCVTOOLS=$(RISCVTOOLS)

CATEGORIES     := bareMetalC 		\
							    mlps 					\
						      imagenet 			\
							    imagenet-orig \
							    ee290 				\
							    ee290-orig

#=============================================================================
# targets
#=============================================================================
.PHONY: all $(CATEGORIES)
all: $(CATEGORIES)

$(CATEGORIES):
	mkdir -p $@
	$(MAKE) -C $@ -f $(abs_top_srcdir)/$@/Makefile $(vars)

