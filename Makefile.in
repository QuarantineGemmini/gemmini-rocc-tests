#=============================================================================
# variables
#=============================================================================
prefix				 := @prefix@
abs_top_srcdir := @abs_top_srcdir@
XLEN           := @XLEN@
ROCC 					 := examples
CATEGORIES     := bareMetalC mlps imagenet ee290

#=============================================================================
# targets
#=============================================================================
.PHONY: all $(CATEGORIES)
all: $(CATEGORIES)

$(CATEGORIES):
	mkdir -p $@
	make -C $@	\
		-f $(abs_top_srcdir)/$@/Makefile \
		abs_top_srcdir=$(abs_top_srcdir) \
	 	src_dir=$(abs_top_srcdir)/$@ \
	 	XLEN=$(XLEN) \
	 	PREFIX=$(ROCC)-$@


